<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= picture.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/pictures/<%= picture._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="picture[title]" value="<%= picture.title %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" name="picture[price]" value="<%= picture.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="picture[image]" value="<%= picture.image %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="picture[description]" value="<%= picture.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/pictures">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

